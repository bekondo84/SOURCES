<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="smsgateway" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>java:/SMSGATEWAY</jta-data-source>
    <class>com.keren.smsgateway.model.SMSCALL</class>
    <class>com.keren.smsgateway.model.SMSIN</class>
    <class>com.keren.smsgateway.model.SMSOUT</class>
    <class>com.keren.smsgateway.model.Civilite</class>
    <class>com.keren.smsgateway.model.Contact</class>
    <class>com.keren.smsgateway.model.GroupeContact</class>
    <class>com.keren.smsgateway.model.SMSModel</class>
    <class>com.keren.smsgateway.model.ProgramSMS</class>
    <class>com.keren.smsgateway.model.SMSConfiguration</class>
    <class>com.keren.smsgateway.model.SMSGateway</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
