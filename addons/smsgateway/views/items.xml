<div class="body">
	<table>
		<thead>
			<tr>
				<th style="border-bottom:solid 2px black !important;margin-bottom:15px !important;font-weight:bold!important;">{{'ARTICLE' | translate}}</th>
				<th style="border-bottom:solid 2px black !important;margin-bottom:15px !important;font-weight:bold!important;">{{'QUANTITE' | translate}}</th>
				<th style="border-bottom:solid 2px black !important;margin-bottom:15px !important;font-weight:bold!important;">{{'PUHT' | translate}}</th>
				<th style="border-bottom:solid 2px black !important;margin-bottom:15px !important;font-weight:bold!important;">{{'REMISE' | translate}}</th>
				<th style="border-bottom:solid 2px black !important;margin-bottom:15px !important;font-weight:bold!important;">{{'TOTALHT' | translate}}</th>
			</tr>
		</thead>
		<tbody>
			<tr ng-repeat="ligne in currentObject.lignes">
				 <td>{{ligne.article.designation}}</td>
				 <td>{{ligne.quantite}}</td>
				 <td>{{ligne.puht}}</td>
				 <td>{{ligne.remise}}</td>
				 <td>{{ligne.totalht}}</td>
			</tr>			
		</tbody>
	</table>
</div>